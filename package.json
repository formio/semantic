{
  "name": "@formio/semantic",
  "version": "2.5.0",
  "description": "Semantic UI templates for form.io forms.",
  "main": "lib/index.js",
  "scripts": {
    "test:coverage": "nyc --reporter=text mocha --reporter spec './{,!(node_modules)/**/}*.spec.js'",
    "test": "mocha --require ts-node/register --reporter spec './{,!(node_modules)/**/}*.spec.ts'",
    "watch": "tsc -w",
    "build": "tsc && gulp templates && webpack",
    "lint": "tslint -p .",
    "prepublish": "npm run build"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "keywords": [
    "Semantic",
    "UI",
    "form.io",
    "forms"
  ],
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/ejs": "^3.0.5",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.20",
    "@types/sinon": "^9.0.10",
    "chai": "^4.2.0",
    "gulp": "^4.0.2",
    "gulp-insert": "^0.5.0",
    "gulp-rename": "^2.0.0",
    "gulp-template": "^5.0.0",
    "mocha": "^8.2.1",
    "nyc": "^15.0.0",
    "pre-commit": "^1.2.2",
    "sinon": "^9.2.3",
    "ts-node": "^9.1.1",
    "ts-sinon": "^2.0.1",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3",
    "webpack": "^5.12.0",
    "webpack-cli": "^4.3.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/formio/semantic.git"
  },
  "license": "MIT"
}
