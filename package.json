{
  "name": "@formio/semantic",
  "version": "2.6.0",
  "description": "Semantic UI templates for form.io forms.",
  "main": "lib/index.js",
  "scripts": {
    "test:coverage": "nyc --reporter=text mocha --reporter spec './{,!(node_modules)/**/}*.spec.js'",
    "test": "mocha --require ts-node/register --reporter spec './{,!(node_modules)/**/}*.spec.ts'",
    "watch": "tsc -w",
    "build": "tsc && gulp templates && webpack",
    "lint": "tslint -p .",
    "prepublish": "npm run build"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "keywords": [
    "Semantic",
    "UI",
    "form.io",
    "forms"
  ],
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/ejs": "^3.1.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.10.2",
    "@types/sinon": "^10.0.4",
    "chai": "^4.3.4",
    "gulp": "^4.0.2",
    "gulp-insert": "^0.5.0",
    "gulp-rename": "^2.0.0",
    "gulp-template": "^5.0.0",
    "mocha": "^9.1.2",
    "nyc": "^15.0.0",
    "pre-commit": "^1.2.2",
    "sinon": "^11.1.2",
    "ts-node": "^10.2.1",
    "ts-sinon": "^2.0.2",
    "tslint": "^6.1.3",
    "typescript": "^4.4.3",
    "webpack": "^5.55.1",
    "webpack-cli": "^4.8.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/formio/semantic.git"
  },
  "license": "MIT"
}
